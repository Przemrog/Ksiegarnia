@model Ksiegarnia.Models.Order

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<hr />
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress" class="control-label"></label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingCity" class="control-label"></label>
        <input asp-for="ShippingCity" class="form-control" />
        <span asp-validation-for="ShippingCity" class="text-danger"></span>
    </div>

    <h2>Order Summary</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Count</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Count</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.UnitPrice * item.Count)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <label>Total Price: </label>
        <span>@Model.SumPrice</span>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>

@model IEnumerable<Ksiegarnia.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.UserName</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.SumPrice</td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

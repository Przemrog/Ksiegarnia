@model IEnumerable<Ksiegarnia.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container">
    <h1 class="my-4">My Orders</h1>

    @if (!Model.Any())
    {
        <p>Your order list is empty</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Price</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>@order.SumPrice</td>
                        <td>
                            <a asp-action="UserOrdersDetails" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<a asp-action="Index" asp-controller="CustomerBooks" class="btn btn-secondary">Back to Store</a>
